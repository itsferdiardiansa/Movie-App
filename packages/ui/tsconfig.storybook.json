{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "composite": true
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.ts"
  ]
}
